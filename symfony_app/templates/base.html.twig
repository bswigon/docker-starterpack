    <button onclick="closeBar()" aria-label="Zamknij pasek">&times;</button>
</div>

<script>
    function closeBar() {
        document.getElementById('floatingBar').style.display = 'none';
        localStorage.setItem('hideFloatingBar', '1');
    }

    window.addEventListener('DOMContentLoaded', () => {
        if (!localStorage.getItem('hideFloatingBar')) {
            setTimeout(() => {
                document.getElementById('floatingBar').classList.add('show');
            }, 600);
        }
    });
</script>

